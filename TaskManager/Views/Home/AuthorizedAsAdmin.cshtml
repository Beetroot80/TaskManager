
@{
    ViewBag.Title = "AuthorizedAsAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Menu
{
    <div class="container stretch-height" id="nav-menu">
        <div class="row">
            <div class="text-center">
                <ul class="nav nav-pills nav-stacked">
                    <li class="active">
                        @Ajax.ActionLink("Add user", "AddUser", "Account", new AjaxOptions
                   {
                       HttpMethod = "Get",
                       InsertionMode = InsertionMode.Replace,
                       UpdateTargetId = "results",
                       LoadingElementId = "loading"
                   })
                    </li>
                    <li class="active">
                        @Ajax.ActionLink("Add project", "AddProject", "project", new AjaxOptions
                   {
                       HttpMethod = "Get",
                       InsertionMode = InsertionMode.Replace,
                       UpdateTargetId = "results",
                       LoadingElementId = "loading"
                   })
                    </li>
                    <li>
                        @Ajax.ActionLink("Users", "UsersList", "Account", new AjaxOptions
                   {
                       HttpMethod = "Get",
                       InsertionMode = InsertionMode.Replace,
                       UpdateTargetId = "results",
                       LoadingElementId = "loading"
                   })
                    </li>
                    <li>
                        @Ajax.ActionLink("Projects", "Projects", "Project", new AjaxOptions
                   {
                       HttpMethod = "Get",
                       InsertionMode = InsertionMode.Replace,
                       UpdateTargetId = "results"
                   })
                    </li>
                </ul>
            </div>
        </div>
    </div>
}

<div class="container stretch-height">
    <div class="row stretch-height">
        <div id="results" class="stretch-height">
        </div>
    </div>
</div>



@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/scripts/jquery-1.12.4.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")

