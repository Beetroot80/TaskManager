
@{
    ViewBag.Title = "AuthorizedAsAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Menu
{
    <div id="wrapper">
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li id="brand">
                    @Html.ActionLink("Home", "Index", "Home", new { area = "" })
                </li>
                <li>
                    @Html.ActionLink("Add project", "AddProject", "Project")
                </li>
                <li>
                    @*@Ajax.ActionLink("Add user", "AddUser", "Account", new AjaxOptions
               {
                   HttpMethod = "Get",
                   InsertionMode = InsertionMode.Replace,
                   UpdateTargetId = "results",
                   LoadingElementId = "loading"
               })*@
                    @Html.ActionLink("Add user", "AddUser", "Account")
                </li>
                <li>
                    @Ajax.ActionLink("Users", "UsersList", "Account", new AjaxOptions
               {
                   HttpMethod = "Get",
                   InsertionMode = InsertionMode.Replace,
                   UpdateTargetId = "results",
                   LoadingElementId = "loading"
               })
                </li>
                <li>
                    @Ajax.ActionLink("Projects", "Projects", "Project", new AjaxOptions
               {
                   HttpMethod = "Get",
                   InsertionMode = InsertionMode.Replace,
                   UpdateTargetId = "results"
               })
                </li>
            </ul>
        </div>
        <div id="menu-toggle"><a href="#menu-toggle"></a></div>
    </div>
}

<div id="results-wrapper">
    <div>
        <div id="results">
        </div>
    </div>
</div>

<script type="text/javascript">
    jQuery("#menu-toggle").click(function (e) {
        e.preventDefault();
        jQuery("#wrapper").toggleClass("toggled");
        jQuery(".body-content").toggleClass("toggled");
    });

    jQuery(".sidebar-nav li a").click(function () {
        jQuery(".sidebar-nav li a.selected").removeClass("selected");
        jQuery(this).addClass("selected")
    });
</script>

