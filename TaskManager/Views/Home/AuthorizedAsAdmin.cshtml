
@{
    ViewBag.Title = "AuthorizedAsAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Menu
{
    <div class="col-sm-3 col-md-2 sidebar" id="menu">
        <ul class="nav nav-pills nav-stacked">
            <li class="active">
                @Ajax.ActionLink("Add user", "AddUser", "Account", new AjaxOptions
           {
               HttpMethod = "Get",
               InsertionMode = InsertionMode.Replace,
               UpdateTargetId = "results"
           })
            </li>
            <li>
                @Html.ActionLink("Edit user", "UserList", "Account", "")
            </li>
            <li>
                @Html.ActionLink("Project list", "Index", "Project", "")
            </li>
        </ul>
    </div>
}
<div id="results">
    <p>In a body</p>
</div>


@Scripts.Render("~/bundles/bootstrap")
