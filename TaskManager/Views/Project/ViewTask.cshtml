@model IEnumerable<TaskManager.Models.ViewTasksModel>


<div id="task-header" class="task-header">
    <div id="task-project-title">
        <i>@ViewBag.ProjectTitle</i>
    </div>

    <div class="input-group" id="task-search">
        <input type="text" class="form-control" placeholder="Search for...">
        <button class="btn btn-default disabled" type="button">Search</button>
    </div>

    <div id="task-navs">
        <div id="task-filters">
            <button class="btn btn-default disabled" type="button">Priority</button>
            <button class="btn btn-default disabled" type="button">Status</button>
        </div>

        <div id="task-add">
            @*@Html.ActionLink("New", "AddTask", "Project", "", new { @class = "btn btn-default" })*@
            <form action="/Project/AddTask" method="get">
                <input type="hidden" name="projectTitle" value="@ViewBag.ProjectTitle" />
                <input type="submit" value="New" class="btn btn-default" />
            </form>
        </div>
    </div>

</div>

<div id="task-body">
    <table id="task-table">
        <tr>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th>
                Info
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <p>@Html.ActionLink(@item.Title, "Comments", "Project", new { id = item.Id }, new { @class = "comments" })</p>
                </td>
                <td id="task-descriptuion-td">
                    <i>@item.Description</i>
                </td>
                <td>
                    <ul class="list">
                        <li id="task-signed-to">
                            <h6>Signed to: @item.AssignedToEmail</h6>
                        </li>
                        <li id="task-status">
                            <h6>Status: @item.StatusTitle</h6>
                        </li>
                        <li id="task-priority">
                            <h6>Priority: @item.PriorityTitle</h6>
                        </li>
                        <li id="task-deadline">
                            <h6>Deadline: @item.DeadLine</h6>
                        </li>
                    </ul>
                </td>
            </tr>
        }

    </table>
</div>


<div class="modal fade" id="modDialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title text-center">Comments</h4>
            </div>
            <div class="modal-body" id="dialogContent">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $.ajaxSetup({ cache: false });
        $(".comments").click(function (e) {
            e.preventDefault();
            $.get(this.href, function (data) {
                $('#dialogContent').html(data);
                $('#modDialog').modal('show');
            });
        });
    });
</script>

